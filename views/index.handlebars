<div class="container">
    <div class="row">
        <div class="col-md-4">
            <h2>Available Burgers</h2>
            <ol class="list-group">
                {{#each burgers}}
                {{#unless this.devoured}}
                <li class="list-group-item">
                    <form action="/burgers/{{this.id}}?_method=POST" method="POST">
                        <div class="col-sm-4">{{this.burger_name}}</div>
                        <button type="submit" class="btn btn-primary">Devour</button>
                    </form>
                </li>
                {{/unless}}
                {{/each}}
            </ol>
        </div>
        <div class="col-md-4">
            <h1 class="text-center">Eat Da Burger!</h1>
    <img src="/assets/img/burger.png" alt="burger" class="burger-pic" style="width: 200px;">
            <form action="/burgers" method="POST">
                <div class="form-groups">
                    <input type="text" class="form-control" id="burger_name" name="burger_name">
                    <button type="submit" class="btn btn-secondary" id="submit-burger">Add Burger</button>
                </div>
            </form>
        </div>
        <div class="col-md-4">
            <h2>Devoured Burgers</h2>
            <ol class="list-group">
                {{#each burgers}}
                {{#if this.devoured}}
                <li class="list-group-item disabled">
                    {{this.burger_name}}
                </li>
                {{/if}}
                {{/each}}
            </ol>
        </div>
    </div>
</div>
